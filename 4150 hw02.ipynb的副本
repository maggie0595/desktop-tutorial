    "def smallest_num(k): \n",
    "    result = 1 \n",
    "    s = 0\n",
    "    for i in range(1,k+1):\n",
    "        result = result * (365-i+1)/365\n",
    "        if  result < 0.5 : \n",
    "            break \n",
    "        else : s = s +1 \n",
    "    return (s+1) "
